{{#each posts as |post|}}
<section class="card" id="{{post.id}}">
  <a href="/post/{{id}}">
    <h1 class="card-header">{{post.title}}</h1>
    <div class="card-body">{{post.content}}</div>
    <div class="card-footer">by {{post.User.username}} on {{last_updated post.updatedAt}}</div>
  </a>
</section>
{{/each}}
